#!/bin/bash

if [ "$#" -lt 1 ]; then
    echo "Usage: $0 <env-file> [--auto]"
    exit 1
elif [ ! -f "$1" ]; then
    echo "ABORTING: specified env-file not found: $1"
    exit 1
else
    echo "Using $1 for IAM creds..."
    source $1

   if [ "$2" = "--auto" ]; then
      #lein autoexpect :growl
      lein autoexpect
   else
      lein test-all
    fi
fi
